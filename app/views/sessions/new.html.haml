= stylesheet_link_tag "sessions"
%h2= t('auth')
= simple_form_for @user, url: sessions_path do |f|
  - f.with_options input_html: { class: :span4 } do |f|
    .field
      = f.input :card_num, as: :string
      %small
        = t('.put_correctly')
      = f.input :fio, as: :string

  .form-actions
    = f.button :submit, value: t('auth'), class: 'btn btn-primary'
    = link_to t('cancel'), root_path, class: 'btn'
