= simple_form_for @variant, url: { controller: 'admin/variants', action: action }, html: { class: 'form-horizontal' } do |f|
  = f.association :question, value_method: :id, label_method: :text
  = f.input :text
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), admin_variants_path, class: 'btn'
