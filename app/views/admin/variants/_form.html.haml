= simple_form_for @variant, url: admin_variants_path, html: { class: 'form-horizontal' } do |f|
  - if @question
    = f.input :question_id, as: :hidden, input_html: { value: @question.id }
  - else
    = f.association :question, value_method: :id, label_method: :text
  = f.input :text
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), admin_variants_path, class: 'btn'
