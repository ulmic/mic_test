= simple_form_for @question, url: admin_questions_path, html: { class: 'form-horizontal' } do |f|
  - f.with_options input_html: { class: :span6 } do |f|
    = f.input :text
    = f.input :answer
    = f.input :right_answer_id
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), questions_path, class: 'btn'
